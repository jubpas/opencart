{{  header }}   {{  column_left }}   
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-skin" data-toggle="tooltip" title="" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{  cancel }}   " data-toggle="tooltip"   class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{  heading_title }}   </h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs  %}
        <li><a href="{{  breadcrumb.href }}   ">{{  breadcrumb.text }}   </a></li>
       {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
   
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{  text_edit }}   </h3>
      </div>
      <div class="panel-body">
        <form action={{  button_save }}    method="post" enctype="multipart/form-data" id="form-skin" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{  text_status }}   </label>
            <div class="col-sm-10">
              <select name="skin_status" id="input-status" class="form-control">
                {%  if skin_status %}
                <option value="1" selected="selected">{{  text_enabled }}   </option>
                <option value="0">{{  text_disabled }}   </option>
                {% else %}
                <option value="1">{{  text_enabled }}   </option>
                <option value="0" selected="selected">{{  text_disabled }}   </option>
                {% endif  %}
              </select>
            </div>
          </div>
		   <div class="form-group ">   
				<label class="col-sm-2 control-label"  ><span data-toggle="tooltip"  data-original-title="Example: #menu{background-color:#f00f00;}" >Custom CSS</span></label>
				 <div class="col-sm-10"><textarea rows="15" class="form-control" name="custom_css" id="custom-css"  >{{  custom_css }}    </textarea>
				 </div>
		   </div>	
        </form>
      </div>
    </div>
  </div>
</div>
{{  footer }}