{{  header }}  {{  column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right"><a href="{{   add  }} "    class="btn btn-primary"><i class="fa fa-plus"></i></a>
        <button type="button" data-toggle="tooltip" title=" {{  button_delete  }} " class="btn btn-danger" onclick="confirm('{{  text_confirm  }}') ? $('#form').submit() : false;"><i class="fa fa-trash-o"></i></button>
      </div>
      <h1>{{  heading_title }}</h1>
      <ul class="breadcrumb">
        {%  for breadcrumbs in breadcrumb %}
           <li><a href="<?php echo $breadcrumb['href']; ?>"><?php echo $breadcrumb['text']; ?></a></li>
        {% endfor %}
		
      </ul>
    </div>
  </div>


  <div class="container-fluid">
    {% if error_warning  %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
   {% endif %}
    {% if  success  %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
   {% endif %}
 
    <div class="panel panel-default">
 
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i>{{  heading_title  }}</h3>
      </div>
 
      <div class="panel-body">

      <form action="{{  delete  }}" method="post" enctype="multipart/form-data" id="form">
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
		      <td width="1" style="text-align: center;"></td>
		      <td class="text-left">{{  column_bank_account }}</td>
		      <td class="text-right">{{  column_sort_order }}</td>
		      <td class="text-right">{{   column_action }}</td>
            </tr>
          </thead>
          <tbody>
		          	 {%  if  bankaccounts  %}
				
					{%  for bankaccount  in bankaccounts  %}
					 
								<tr>
								  <td style="text-align: center;">{% if bankaccount.selected %}
									<input type="checkbox" name="selected[]" value="{{ bankaccount.bank_id }}" checked="checked" />
								   {%  else  %}
									<input type="checkbox" name="selected[]" value="{{ bankaccount.bank_id }}" />
								   {%  endif  %}</td>
								  <td class="text-left"> {{ bankaccount.name }}</td>
								   <td class="text-right">{{ bankaccount.sort_order  }}</td>
								  <td class="text-right"> 
										      <a href="{{ bankaccount.action_edit }}"  data-toggle="tooltip"  class="btn btn-primary"><i class="fa fa-pencil"></i></a> 
							      </td>
							 </tr>
				      {%  endfor  %}
			    {%  else  %}
					<tr>
					  <td class="center" colspan="4">{{  text_no_results }}</td>
					</tr>
                 {%  endif  %}
          </tbody>
        </table>
      </form>
       
      </div> 
    </div> 
  </div> 
</div> 
{{ footer }}  